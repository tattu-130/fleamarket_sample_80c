.AccountContainer
  = render 'devise/shared/header'
  .AccountPage
    .AccountPage__title
      %h2 プロフィール
    .AccountPage__form
      = form_with(model: @user, local: true) do |f|
        = render "devise/shared/error_messages", resource: @user
        .FormField
          .FormField__label--normal
            = f.label :nickname, 'ニックネーム'
            %span.requiredLabel 必須
          .FormField__input--normal
            = f.text_field :nickname, placeholder: '例）フリマ太郎'
        .FormField
          .FormField__label--normal
            = f.label :email, 'メールアドレス'
            %span.requiredLabel 必須
          .FormField__input--normal
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .FormField
          .FormField__label--normal
            = f.label "お名前（全角）"
            %span.requiredLabel 必須
          .FormField__input--normal.FormField--flex
            = f.text_field :family_name, placeholder: "例)山田"
            = f.text_field :first_name, placeholder: "例)彩"
        .FormField
          .FormField__label--normal
            = f.label "お名前カナ（全角）"
            %span.requiredLabel 必須
          .FormField__input--normal.FormField--flex
            = f.text_field :family_name_kana, placeholder: "例)ヤマダ"
            = f.text_field :first_name_kana, placeholder: "例)アヤ"
        .FormField
          .FormField__label--normal
            = f.label "アイコン"
          .FormField__input--normal.FormField--flex
            = f.file_field :user_image
        .FormField
          .FormField__label--normal
            = f.label "自己紹介（300字以内）"
          .FormField__input--normal.FormField--flex
            = f.text_area :introduction, rows: "10", class: "FormField__input--width", maxlength: "300", placeholder: "例)紹介文を入力してください"
          .count
            .count_text 残り
            .count_number 300文字

        .actions
          = f.submit "更新する", class: 'Button UserButton'
  = render "devise/shared/footer"



