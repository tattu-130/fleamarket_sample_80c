      .content__list__box
        =image_tag item.item_imgs[0].src.url, size: "220x170", class: "class__list__image"
        = image_tag "#{item.item_imgs[0].src.url}"
        -# - item.item_imgs.each do |image|
        -#   = image_tag image.src.url
        = link_to '削除', item_path(item.id), method: :delete
        = link_to '編集', edit_item_path(item.id)
        .content__list__name
          = item.name
        .content__list__price
          = "#{item.price}円（税込）"
