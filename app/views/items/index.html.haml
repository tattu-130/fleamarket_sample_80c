    =image_tag "pict/pict-reason-01.jpg" , class: "reason__select__one"
    .reason__select__number.reason__select__number__one
      1
    =image_tag "pict/pict-reason-02.jpg", class: "reason__select__two"
    .reason__select__number.reason__select__number__two
      2
    =image_tag "pict/pict-reason-03.jpg", class: "reason__select__three"
    .reason__select__number.reason__select__number__three
      3
  .reason__under
    .reason__under__one
      %span.reason__under__important.reason__under__important__one
        ３分
